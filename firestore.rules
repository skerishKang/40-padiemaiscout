rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email in ['padiemipu@gmail.com', 'limone@example.com', 'admin@mdreader.com'];
    }

    // User profiles
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
    
    // Uploaded Files (Grants) - Public Read for Dashboard, Write for Auth
    match /uploaded_files/{docId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
    }

    // Scraped Grants - Public Read, Admin Write (or Auth for now)
    match /scraped_grants/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Payments - Auth only
    match /payments/{docId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isAdmin());
      allow create: if request.auth != null;
    }
  }
}
